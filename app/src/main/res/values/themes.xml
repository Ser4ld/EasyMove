<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyMove" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorPrimaryVariant">@color/app_theme</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#008FBF</item>
        <item name="colorSecondaryVariant">#008FBF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="custom_card_view_profile_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view_profile</item>
    </style>

    <style name="custom_card_view_profile" parent="">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">30dp</item>
    </style>

    <style name="Theme.SearchWithMaps" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="CustomTheme" parent="Theme.EasyMove">

        <item name="mapboxSearchSdkTheme">@style/CustomSearchSdkTheme</item>

    </style>

    <style name="CustomSearchSdkTheme" parent="">
        <item name="mapboxSearchSdkPrimaryTextColor">@color/dark</item>
        <item name="mapboxSearchSdkPrimaryTextInactiveColor">@color/app_theme</item>
        <item name="mapboxSearchSdkPrimaryAccentColor">@color/app_theme</item>
        <item name="mapboxSearchSdkOnPrimaryAccentColor">#D3C9A6</item>
        <item name="mapboxSearchSdkDistanceColor">#A1AE7E</item>
        <item name="mapboxSearchSdkIconTintColor">@color/dark</item>
        <item name="mapboxSearchSdkBackgroundColor">#F5F4EC</item>
        <item name="mapboxSearchSdkBackgroundSecondaryColor">#AFC3AD</item>
        <item name="mapboxSearchSdkPopulateArrowColor">#D3C9A6</item>
        <item name="mapboxSearchSdkProgressColor">@color/app_theme</item>
        <item name="mapboxSearchSdkErrorIconColor">#653030</item>
    </style>
</resources>




