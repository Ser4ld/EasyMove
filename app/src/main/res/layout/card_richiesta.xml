<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    >

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/autoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome dell'Autore"
        android:textColor="@color/app_theme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profileImageView"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/textDescrizioneRichiesta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descrizione della richiesta..."
        android:textColor="@color/grey_text"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/autoreTextView"
        app:layout_constraintStart_toStartOf="@+id/autoreTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/textStatoRichiesta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stato"
        android:textColor="@color/grey_text"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/textDescrizioneRichiesta"
        app:layout_constraintStart_toStartOf="@+id/autoreTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textStatoRichiesta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            app:cornerRadius="20dp"
            android:layout_marginHorizontal="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/unselected_star_color"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
